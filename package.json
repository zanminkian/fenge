{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "install": "pnpm build",
    "prepare": "fenge install",
    "release": "pnpm -r publish",
    "style": "fenge",
    "style:update": "fenge -u",
    "test": "pnpm style && pnpm -r test"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@rnm/tscx": "0.3.10",
    "fenge": "workspace:*",
    "typescript": "5.9.3"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">=22.18.0"
    },
    "packageManager": {
      "name": "pnpm",
      "version": "10.15.0"
    }
  }
}
